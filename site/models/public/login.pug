doctype html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"

include tools.pug

html(lang=lang)
  +create-head

  body.index-bg(scroll="no")

    // Big bar on top with navigation utilities.
    header
      a(href="/")
        logo
      ul
        li
          a.color-light(href="login") Login
        li.nav-item
          a(href="stats") Stats


    login-register
      to-register
        p Register
        a(href="register")
          arrow
      
      holder
        form(class="login-submit" method="post" action="/login")
          h1 Simun  
          p 
          input.shadow(type="text" name="username" id="Input Username" placeholder="Username" required autofocus)
          br
          input.shadow(type="password" name="password" id="Input Password" placeholder="Password" required)
          br
          button(type="submit") Login
  +create-footer