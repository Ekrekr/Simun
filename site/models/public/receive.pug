doctype html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"

include tools.pug

html(lang=lang)
  +create-head

  body.index-bg(scroll="no")

    // Big bar on top with navigation utilities.
    header
      a(href="index")
        logo
      ul
        li
          a(href="login") Login
        li
          a.color-light(href="receive") Receive
        li
          a(href="send") Send
        li.nav-item
          a(href="stats") Stats

    receive

      snippet-list
        for snippet, index in snippets
          row 
            a(id="select-"+index)
              snippet(href="index" id=snippet.id)
                info
                  description #{snippet.description}
                  br
                  from jhon
                img(src=snippet.content)
      
      snippet-selected
        info
          description(id="selected-description")
          br
          from(id="selected-author")
        img(id="selected-content")
        a(href="" title="Report")
          report
        control-box
          a(href="" title="Trash it")
            trash-it
          a(href="" title="Forward it")
            forward-it


      //- script function testfunc(position) {console.log("setting", position, "active")}

  +create-footer
  
  script(type="text/javascript" src="../scripts/receive.js")
