{
  "name": "Simon",
  "version": "1.0.0",
  "description": "A website for experimenting with agent sharing, client and server side.",
  "main": "server.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "css": "^2.2.4",
    "express": "^4.16.4",
    "mssql": "^4.3.2",
    "mysql": "^2.16.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "request": "^2.88.0",
    "sql": "^0.78.0",
    "sqlite3": "^4.0.6",
    "tedious": "^5.0.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "mocha": "^5.2.0",
    "standard": "^12.0.1"
  },
  "scripts": {
    "tests": "standard --fix; mocha tests",
    "start-server": "node server/server",
    "compile-css": "sass -w models/public/style:public/style",
    "compile-html": "pug -w models/public -o public",
    "dev": "open public/index.html; concurrently --kill-others \"npm run compile-css\" \"npm run compile-html\" \"npm run start-server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ekrekr/Simon.git"
  },
  "author": "Elias Kassell Raymond",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Ekrekr/Simon/issues"
  },
  "homepage": "public/index.js"
}
